<% @title = _('Change your Status on {{site_name}}',
   :site_name => site_name) %>

<div id="change_status_flag">
  <%= form_for(@user, :url => user_update_status_flag_path) do |f| %>
    <%= foi_error_messages_for :user %>

    <div class="form_note">
      <h1><%= @title %></h1>
    </div>

    <p>
      <%= f.label :status_flag, _('Status Information:'),
                  :class => 'form_label' %>
      <%= f.text_field :status_flag, :value => @user.status_flag,  :placeholder => 'your status' %>
    </p>

    <div class="form_button">
      <%= f.submit _('Change Your Status') %>
    </div>
  <% end %>
</div>
